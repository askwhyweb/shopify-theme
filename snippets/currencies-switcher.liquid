<select id="currencies" class="currencies" name="currencies" style="display:none">
  {% capture codes %},USD,EUR,GBP,CAD,ARS,AUD,ILS,BBD,BDT,BSD,BHD,BRL,BOB,BND,BGN,MMK,KYD,CLP,CNY,COP,CRC,HRK,CZK,DKK,DOP,XCD,EGP,XPF,FJD,GHS,GTQ,GYD,GEL,HKD,HUF,ISK,INR,IDR,NIS,JMD,JPY,JOD,KZT,KES,KWD,LVL,LTL,MXN,MYR,MUR,MDL,MAD,MNT,MZN,ANG,NZD,NGN,NOK,OMR,PKR,PYG,PEN,PHP,PLN,QAR,RON,RUB,SAR,RSD,SCR,SGD,SYP,ZAR,KRW,LKR,SEK,CHF,TWD,THB,TZS,TTD,TRY,UAH,AED,UYU,VEB,VND,ZMK,{% endcapture %}
  {% assign supported_codes = settings.supported_currencies | split: ' ' %}
  <option value="{{ shop.currency }}" selected="selected">{{ shop.currency }}</option>
  {% for code in supported_codes %}
     
      <option value="{{ code }}">{{ code }}</option>
  
  {% endfor %}
</select>
 


             <div class="nice-select currency-switcher  slim dd-form">
                        <span class="current notranslate"> 
                         <span class="selected--currency-flag">
                              {% for code in supported_codes %}
   
          {% assign file_extensionn = 'svg' %}
                           <img id="cunfla" src="{{ 'us.svg' | asset_url | split:'?' | first }}"
                                data-src="{{ code  | slice: 0, 2 | handle | append: '.' | append: file_extensionn | asset_url | split:'?' | first  }}"
 data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
 data-aspectratio="{{ code  | slice: 0, 2 | handle | append: '.' | append: file_extensionn | asset_url | split:'?' | first }}"
 data-sizes="auto"
 data-parent-fit="contain"
                                alt="{{ code }}" class="lazyload country--flag {{ code }}" />
     
  {% endfor %}
</span>
                          
                          <span class="selectedvalue"> </span></span>
        <ul class="list">
           {% for code in supported_codes %}
     
          {% assign file_extensionn = 'svg' %}
            <li class="option notranslate " data-value="{{ code }}"> <img 
                                                                          src="{{ 'us.svg' | asset_url | split:'?' | first }}"
                                data-src="{{ code  | slice: 0, 2 | handle | append: '.' | append: file_extensionn | asset_url | split:'?' | first }}"
 data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
 data-aspectratio="{{ code  | slice: 0, 2 | handle | append: '.' | append: file_extensionn | asset_url | split:'?' | first }}"
 data-sizes="auto"
 data-parent-fit="contain" 
                                                                          
                                                                          alt="{{ code }}" class="lazyload country--flag {{ code }}" />{{ code }}</li>
       
  {% endfor %}
               </ul>
    </div>
<script>
$( document ).ready(function() {
  var selectedvalue = $('.currencies').val();
  $('.selectedvalue').html(selectedvalue);
  $('.list li').click(function(){
    var datavalue = $(this).attr('data-value');
    $('.currencies').val(datavalue);
$('.currencies').trigger('change');
    $('.selectedvalue').html(datavalue);
   
    $.cookie("currencynewcookie", datavalue, {

   path    : '/',          // The value of the path attribute of the cookie
                           // (Default: path of page that created the cookie).


  
});
    });
 });
</script>