  <div class="container-fluid  ">
    <div class="row">
      <div class="containerc">
        <div class="mobile-banner-slider">
          {% assign mTotalSlides = 0 %}
         {% for block in section.blocks %}
          	{% assign mTotalSlides = mTotalSlides | plus: 1 %}
                       <div class="item">
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" >
                  {% endif %}
                            {% if block.settings.image == blank %}
        {{ 'lifestyle-1'  | placeholder_svg_tag: 'placeholder-svg' }}
        {%else%}
                 <img src="{{ block.settings.image | img_url: '2048x' }}" class="img-responsive lazy"  data-original="{{ product-block.featured_image | product_img_url: image_size }}" alt="{{ product-block.featured_image.alt }}" height="562" width="1410"> 
                
                  <div class='banner-text id-{{block.id}} v-{{ block.settings.heading_vertical_pos }}--h-{{ block.settings.horizontal_vertical_pos }}'>
               
                 {% if block.settings.heading != blank %}
                    <h2>{{ block.settings.heading }}</h2>
                      {% endif %} 
                     {% if block.settings.subheading != blank %}
                    <p>{{ block.settings.subheading }}</p>
                      {% endif %} 
                     {% if block.settings.buttontext != blank %}
                    <a href="{{ block.settings.link }}" class="btn btn-default">{{ block.settings.buttontext }}</a>
                  {% endif %} 
                  </div>
                  {% endif %} 
                  {% if block.settings.link != blank %}
                </a>	
              {% endif %}
            </div>
         {% endfor %}

    
        </div>
        {% if mTotalSlides < 2 %}
          <style>
            .mobile-banner-slider .owl-dots {
              display: none !important;
            }
			.banner-slider .owl-controls .owl-nav .owl-prev, .banner-slider .owl-controls .owl-nav .owl-next{
					    display: none !important;
			}
          </style>
        {% endif %}
      </div>
    </div>
  </div>

<style>
 .mobile-banner-slider .banner-text h2{color:{{section.settings.headingcolor}};font-size:{{section.settings.headingfontsize}};font-weight:{{section.settings.headingfontweight}};}
  .mobile-banner-slider .banner-text p{color:{{section.settings.subheadingcolor}};font-size:{{section.settings.subheadingfontsize}};font-weight:{{section.settings.subheadingfontweight}};}
  .mobile-banner-slider .banner-text .btn-default{color:{{section.settings.buttontextcolor}}!important;background:{{section.settings.buttonbgcolor}}!important;border:none;font-size:{{section.settings.buttonfontsize}};font-weight:{{section.settings.buttonfontweight}};width:auto;}
</style>
